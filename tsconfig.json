{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDirs": ["src"],
    "types": ["node"],
    "pretty": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowUnreachableCode": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "module": "Node16",
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": ".",
    "types": ["node"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowUnreachableCode": false
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "lib"]
}

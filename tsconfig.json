{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowUnreachableCode": false
  },
  "include": ["src", "tests", "types/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}

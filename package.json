{
  "name": "verror-0",
  "description": "VError without dependencies on top of nodejs standart library",
  "repository": {
    "url": "git+https://github.com/ghost-vk/verror-0.git",
    "type": "git"
  },
  "version": "1.0.4",
  "license": "MIT",
  "type": "module",
  "main": "./lib/cjs/lib.js",
  "module": "./lib/esm/lib.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build": "rm -rf lib && yarn compile",
    "test": "node --import @swc-node/register/esm-register --test tests/*.spec.ts",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.3",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "default": "./lib/esm/index.js"
    },
    "./package.json": "./package.json"
  }
}
